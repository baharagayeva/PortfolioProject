@model IEnumerable<Portfoli>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800 mt-4">Portfolio</h1>


    <a href="/admin/portfolio/Add" class="btn btn-primary">Add New</a>

    <!-- DataTaBles Example -->
    <div class="card shadow mb-4 mt-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped " id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Work Category</th>
                            <th>Work Img Path</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.WorkCategory.Name</td>
                                <td> <img src="@("~/Image/WorkImages/"+@item.WorkImgPath)" asp-append-version="true" width="100px" height="100px" /></td>
                                <td>
                                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.ID">
                                        Edit
                                    </a>

                                </td>
                                <td>
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ID">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>


