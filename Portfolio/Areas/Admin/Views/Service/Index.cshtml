@model IEnumerable<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800 mt-4">Services</h1>


    <a href="/admin/service/Add" class="btn btn-primary">Add New</a>

    <!-- DataTaBles Example -->
    <div class="card shadow mb-4 mt-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped " id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Icon Name</th>
                            <th>Show On Page</th>
                            <th>Description</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td><i class="@item.IconName"></i></td>
                                <td>@item.ShowOnPage</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.ID">
                                        Edit
                                    </a>

                                </td>
                                <td>
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ID">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>