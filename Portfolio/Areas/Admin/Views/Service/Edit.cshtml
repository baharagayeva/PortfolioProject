@model Service
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Edit Service</h3></div>
                    <div class="card-body">
                        <form method="post" > 
                            <div class="row mb-3">
                                <div class="form-group">
                                    <label for="id">Id</label>
                                    <input asp-for="ID" type="text" class="form-control" placeholder="enter" disabled="disabled" />
                                </div>
                                <div class="col-md-12">
                                    <div class="form mb-3 mb-md-3">
                                        <label for="inputTitle">Title</label>
                                        <input asp-for="Title" type="text" class="form-control" placeholder="enter Title" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form mb-3 mb-md-3">
                                        <label for="inputIcon">Icon</label>
                                        <input asp-for="IconName" type="text" class="form-control" placeholder="enter Icon Name" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form mb-3 mb-md-3">
                                        <label for="inputShowOnPage">Show On Page</label>
                                        <input asp-for="ShowOnPage" type="checkbox" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form mb-3 mb-md-3">
                                        <label for="inputDescription">Description</label>
                                        <input asp-for="Description" type="text" class="form-control" placeholder="enter Description" />
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-0">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


